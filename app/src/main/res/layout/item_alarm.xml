<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/app_item_background">

    <TextView
        android:id="@+id/item_clock_time"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/listItemText"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_label"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/ex_margin"
        android:layout_marginEnd="@dimen/ex_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/listItemText"
        app:layout_constraintStart_toStartOf="@id/item_clock_time"
        app:layout_constraintTop_toBottomOf="@id/item_clock_time" />

    <Switch
        android:id="@+id/item_switch"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/ex_margin"
        android:thumb="@drawable/switch_ios_thumb"
        android:track="@drawable/switch_ios_track_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>