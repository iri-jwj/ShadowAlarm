<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_default_background"
    tools:context=".addeditpage.AddEditAct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/app_default_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/filter_enabled"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:text="@string/add_edit_cancel"
            android:textColor="@color/add_edit_toolbar_text" />

        <TextView
            android:id="@+id/add_alarm"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/ex_margin"
            android:text="@string/add_edit_save"
            android:textColor="@color/add_edit_toolbar_text" />

    </androidx.appcompat.widget.Toolbar>

    <NumberPicker
        android:id="@+id/number_picker_hour"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toStartOf="@id/number_picker_minute"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <NumberPicker
        android:id="@+id/number_picker_minute"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/number_picker_hour"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <include
        layout="@layout/add_edit_alarm_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_picker_hour" />

</androidx.constraintlayout.widget.ConstraintLayout>