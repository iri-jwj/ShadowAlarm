            android:text="@string/select_tues"
            android:textSize="@dimen/notification_label" />

        <ImageView
            android:id="@+id/weekday_selected_tues"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ex_margin"
            android:scaleType="centerInside"
            android:src="@drawable/week_selected"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />
    <RelativeLayout
        android:id="@+id/select_wednesday"
        android:layout_width="match_parent"
