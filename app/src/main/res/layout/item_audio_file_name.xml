<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:background="@color/app_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/audio_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ex_margin"
        android:textColor="@color/listItemText"
        android:textSize="@dimen/notification_app_name" />

    <ImageView
        android:id="@+id/audio_selected"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ex_margin"
        android:scaleType="centerInside"
        android:src="@drawable/week_selected"
        android:visibility="gone" />
</RelativeLayout>